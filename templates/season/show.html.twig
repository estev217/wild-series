{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <div class="container">
        <div class="col align-self-center">
            <div class="text-white">
                <h1 class="text-center">Season</h1>

                <table class="table text-white">
                    <tbody>
                        <tr>
                            <th>Number</th>
                            <td>{{ season.number }}</td>
                        </tr>
                        <tr>
                            <th>Year</th>
                            <td>{{ season.year }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ season.description }}</td>
                        </tr>
                        <tr>
                            <th>Episodes</th>
                            <td>
                                {% for episode in episodes %}
                                    <a href="{{ path('episode_show', {'slug': episode.slug}) }}">{{ episode.number }}</a>
                                {% endfor %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="d-flex flex-column pb-5">
                <a href="{{ path('program_show', {'slug': program.slug}) }}" class="align-self-start p-3">Retour à la série</a>

                <a href="{{ path('season_edit', {'id': season.id}) }}" class="align-self-start p-3">edit</a>

                {{ include('season/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
