{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
<a href="{{ path('app_index') }}">
    Retour à l'accueil
</a>
<table class="table">
    <thead>
    <tr>
        <th scope="col" class="text-uppercase text-center"></th>
        <th scope="col" class="col-1 text-uppercase text-center text-white">Catégorie</th>
        <th scope="col" class="col-2 text-uppercase text-center text-white">Titre</th>
        <th scope="col" class="col-2 text-uppercase text-center text-white">Saisons</th>
        <th scope="col" class="col-4 text-uppercase text-center text-white">Poster</th>
        <th scope="col" class="col-5 text-uppercase text-center text-white">Synopsis</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td scope="row"></td>
            <td class="text-center align-middle text-white">{{ program.category.name }}</td>
            <td class="text-center align-middle text-white">{{ program.title }}</td>
            <td class="text-center align-middle text-white">
                {% for season in seasons %}
                    <a href="{{ path('wild_show_season', {'id': season.id}) }}">{{ season.number }}</a>
                {% endfor %}
            </td>
            <td class="text-center align-middle text-white">
                <img class="align-self-start w-75" src="{{program.poster}}" alt="{{ program.title }} poster">
            </td>
            <td class="text-center align-middle text-white">{{ program.summary }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}