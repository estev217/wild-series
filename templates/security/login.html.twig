{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-3"></div>
            <form method="post" class="col-6 mt-5 d-flex flex-column justify-content-center">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté avec le compte {{ app.user.username }}, <a href="{{ path('app_logout') }}">se déconnecter</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-5 font-weight-normal text-white text-center">Identifiez-vous pour accéder à cette page</h1>
                <label for="inputEmail" class="text-white">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label for="inputPassword" class=" mt-3 text-white">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="mt-5 btn btn-lg btn-outline-secondary" type="submit">
                    Se connecter
                </button>
            </form>
        <div class="col-3"></div>
    </div>
</div>
{% endblock %}
