{% extends "base.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-5">
            <p class="ml-5 text-white homeMessage text-center"> Bienvenue sur {{ website }} !</p>
        </div>
        <div class="col-7">
            <h1 class="mt-5 ml-5 text-white"> Nos dernières séries</h1>
            {% for program in programs %}
                <div class="ml-5 mr-5 card">
                    <a class="ml-2 mt-2 text-dark" href="{{ path('wild_show_program', {'slug': program.slug }) }}">{{ program.title }} ( {{ program.category.name }} )</a>
                    <p class="m-3">{{ program.summary }}</p>
                </div>
            {% else %}
                Aucune série trouvée.
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
