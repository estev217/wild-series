{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
<div class="container">
    <div class="col align-self-center">
        <div class="text-white">
            <h1 class="text-center">Actor index</h1>

            <table class="table text-white">
                <thead>
                    <tr>
                        <th scope="col" class="col-1 text-uppercase text-center text-white">Id</th>
                        <th scope="col" class="col-1 text-uppercase text-center text-white">Name</th>
                        <th scope="col" class="col-1 text-uppercase text-center text-white">actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for actor in actors %}
                    <tr>
                        <td class="text-center align-middle text-white">{{ actor.id }}</td>
                        <td class="text-center align-middle text-white">{{ actor.name }}</td>
                        <td class="text-center align-middle text-white">
                            <a href="{{ path('actor_show', {'id': actor.id}) }}">show</a>
                            <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="text-center mb-5">
                <a href="{{ path('actor_new') }}">Create new</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
