{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <div class="container">
        <div class="col align-self-center">
            <div class="text-white">
                <h1 class="text-center">Actor</h1>

                <table class="table text-white">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ actor.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ actor.name }}</td>
                        </tr>
                        <tr>
                            <th>Apparitions</th>
                            <td>
                                <ul>
                                {% for program in actor.programs %}
                                    <li>
                                    <a href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a>
                                    </li>
                                {% else %}
                                    <li>
                                    <a>Aucune s√©rie pour cet acteur.</a>
                                    </li>
                                {% endfor %}
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="d-flex flex-column pb-5">
                <a href="{{ path('actor_index') }}" class="align-self-start p-3">back to list</a>

                <a href="{{ path('actor_edit', {'slug': actor.slug}) }}" class="align-self-start p-3">edit</a>

                {{ include('actor/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
