{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <div class="container">
        <div class="col align-self-center">
            <div class="text-white">
                <h1 class="text-center">Episode</h1>

                <table class="table text-white">
                    <tbody>
                        <tr>
                            <th>Title</th>
                            <td>{{ episode.title }}</td>
                        </tr>
                        <tr>
                            <th>Number</th>
                            <td>{{ episode.number }}</td>
                        </tr>
                        <tr>
                            <th>Synopsis</th>
                            <td>{{ episode.synopsis }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="d-flex flex-column pb-5">
                <a href="{{ path('season_show', {'id': season.id}) }}" class="align-self-start p-3">Retour à la saison</a>

                <a href="{{ path('episode_edit', {'slug': episode.slug}) }}" class="align-self-start p-3">edit</a>

                {{ include('episode/_delete_form.html.twig') }}
            </div>

            {% if app.user %}
                <h2 class="mt-5">Ajoutez votre commentaire sur cet épisode :</h2>
                <div class="flex-column d-flex">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-lg">{{ button_label|default('Poster') }}</button>
                    {{ form_end(form) }}
                    </div>
            {% endif %}

            <div>
                <h2 class="mt-5 mb-5">Commentaires :</h2>
                <ul>
                    {% for comment in episode.comments %}
                        <li>
                            <p>{{ comment.author.username ~ ' : ' ~ comment.rate}}</p>
                            <p>{{ comment.comment }}</p>
                        </li>
                    {% endfor %}
                </ul>
            </div>

        </div>
    </div>
{% endblock %}
